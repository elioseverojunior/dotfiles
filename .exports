# Make vim the default editor
export EDITOR="vim"

# Prefer US English and use UTF-8
export LANG="en_US"
export LC_ALL="en_US.UTF-8"

#latest JDK 6 by Apple
export JAVA_6_HOME=/System/Library/Frameworks/JavaVM.framework/Home

#latest JDK 8 by Oracle
export JAVA_8_HOME=/Library/Java/JavaVirtualMachines/jdk1.8.0_20.jdk/Contents/Home

#default JDK is 8
export JAVA_HOME=$JAVA_8_HOME

# Maven
export M2_HOME=~/Softwares/apache-maven-3.2.3
export PATH=$PATH:$M2_HOME/bin

# Node
export NODE_HOME=~/Softwares/node-v0.10.32-darwin-x64
export PATH=$PATH:$NODE_HOME/bin

# Eclipse (eclim)
export ECLIPSE_HOME=~/Softwares/eclipse-java-luna-SR1-macosx-cocoa-x86_64
export PATH=$PATH:$ECLIPSE_HOME/bin
